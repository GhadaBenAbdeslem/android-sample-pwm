<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_margin="10dip"
    android:background="@drawable/border"
    android:padding="20dip"
    tools:context=".PWMSample" >

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dip"
        android:text="@string/channel"
        android:textAppearance="?android:attr/textAppearanceMedium" />
    
    <Spinner
        android:id="@+id/channel_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/frequency_text" 
        android:spinnerMode="dropdown" />
    
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/channel_selector"
        android:text="@string/enable"
        android:layout_marginTop="10dip"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Switch
        android:id="@+id/enable_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/frequency_text"
        android:layout_below="@+id/channel_selector"
        android:layout_marginTop="10dip"
        android:checked="false"
        android:enabled="false" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enable_button"
        android:layout_marginTop="10dip"
        android:text="@string/frequency"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/frequency_text"
        android:layout_width="130dip"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enable_button"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/textView1"
        android:ems="10"
        android:enabled="false"
        android:inputType="numberDecimal"
        android:maxLength="9"
        android:text="@string/default_frequency" />

    <Button
        android:id="@+id/apply_frequency_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enable_button"
        android:layout_toRightOf="@+id/frequency_text"
        android:text="@string/apply" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/apply_frequency_button"
        android:layout_marginTop="10dip"
        android:text="@string/duty_cycle"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/duty_text"
        android:layout_width="130dip"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enable_button"
        android:layout_below="@+id/apply_frequency_button"
        android:layout_marginTop="5dip"
        android:layout_toRightOf="@+id/textView2"
        android:ems="10"
        android:enabled="false"
        android:inputType="number"
        android:maxLength="3"
        android:text="@string/default_duty" />

    <Button
        android:id="@+id/apply_duty_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/apply_frequency_button"
        android:layout_toRightOf="@+id/duty_text"
        android:text="@string/apply" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/apply_duty_button"
        android:text="@string/polarity"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <RadioButton
        android:id="@+id/polarity_normal_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enable_button"
        android:layout_below="@+id/apply_duty_button"
        android:checked="true"
        android:enabled="false"
        android:text="@string/normal" />

    <RadioButton
        android:id="@+id/polarity_inverted_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/enable_button"
        android:layout_below="@+id/polarity_normal_button"
        android:checked="false"
        android:enabled="false"
        android:text="@string/inversed" />

</RelativeLayout>